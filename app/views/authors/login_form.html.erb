<body>
  <%= form_tag("/login") do %>
  <form>
    <div class="form-group row container">
        <label for="inputEmail" class="col-10 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail" placeholder="Email" value="<%= @email %>" name="email" >
        </div>
        <label for="inputpassword" class="col-10 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" name="password" value="<%= @password %>" class="form-control" id="inputpassword" placeholder="Password" name="password">
        </div>
        <div class="col-sm-10 pt-3">
          <button type="submit" class="btn btn-primary ">ログイン</button>
        </div>
      </div>
    </div>
  </form>
  <% end %>
</body>