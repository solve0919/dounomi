<div class="container">
  <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
  <h1>ブログ記事編集</h1>
  <%= form_with  model: @post,multipart: true,local: true do |form| %>
    <div class="form-group">
      <%= form.label "タイトル" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :画像 %>
      <%= form.file_field :image_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "本文" %>
      <%= form.text_area :body , size: "20x10", class: "form-control" %>
    </div>
      <% if session[:user_id].to_i >= 1 %>
        <%= form.submit '更新する', class: "btn btn-primary"%>
      <% end %>
  <% end %>
</div>