<div class="row">
  <div class="col-md-12">
    <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
    <h1>ブログ記事編集</h1>
    <%= form_with  model: @post,multipart: true,local: true do |form| %>
      <div class="form-group">
        <%= form.label "タイトル" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "カテゴリ" %>
        <%= form.text_field :category, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "本文" %>
        <%= form.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <p><%= form.label :image_url %></p>
        <p><%= form.file_field :image_url, class: "form-control" %></p>
      </div>
        <% if session[:user_id].to_i >= 1 %>
          <%= form.submit '更新する', class: "btn btn-primary" %>
        <% end %>
    <% end %>
  </div>
</div>