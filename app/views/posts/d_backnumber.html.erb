    <%= link_to(image_tag(post.image_url.to_s,:size =>'64x64') ,"/posts/#{post.id}")   %>
  </div>
  <div class="media-body">
    <h5 class="mt-0"><%= link_to(post.title,"/posts/#{post.id}") %></h5>
    <%= truncate(post.body,length:70) %>
  </div>
</div>
</li>
</ul>
        <div class="row h3 mt-3">
        </div>
      <% end %>
    </div>
  </div>
</main>
